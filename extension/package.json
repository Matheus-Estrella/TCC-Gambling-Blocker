{
  "name": "gambling-blocker",
  "version": "0.1.0",
  "description": "Extensão para reduzir vício em sites de apostas",
  "scripts": {
    "build": "npm run clean && tsc && npm run copy-static",
    "clean": "rmdir /s /q dist 2>nul || exit 0",
    "copy-static": "npm run copy-html && npm run copy-css && npm run copy-icons",
    "copy-html": "xcopy \"src\\popup\\popup.html\" \"dist\\popup\\\" /Y /I",
    "copy-css": "xcopy \"src\\popup\\popup.css\" \"dist\\popup\\\" /Y /I", 
    "copy-icons": "xcopy icons dist\\icons /E /Y /I",
    "dev": "tsc --watch",
    "test": "jest"
  },
  "devDependencies": {
    "@types/chrome": "^0.0.246",
    "typescript": "^5.3.0",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.8",
    "ts-jest": "^29.1.1",
    "@types/node": "^20.10.0"
  },
  "type": "module"
}